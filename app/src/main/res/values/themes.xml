<resources>
    <!-- Base application theme. -->
    <style name="Theme.LesPas.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/archer_bold</item>

        <item name="actionBarStyle">@style/Theme.LesPas.ActionBar</item>
        <item name="android:actionBarStyle">@style/Theme.LesPas.ActionBar</item>
        <item name="actionModeStyle">@style/Theme.LesPas.ActionModeStyle</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.LesPas.AlertDialog</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="primaryTextWhite">@color/color_text_light</item>
        <item name="primaryTextBlack">@color/color_text_dark</item>
    </style>

    <!-- Primary theme -->
    <style name="Theme.LesPas" parent="Theme.LesPas.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorSecondaryVariantFade">@color/color_secondary_variant_faded</item>

        <!-- Additional UI colors -->
        <item name="colorError">@color/color_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="backgroundColor">@color/color_background</item>
        <item name="android:colorEdgeEffect">@color/color_on_primary_invert</item>

        <item name="android:textColorPrimary">@color/color_on_primary</item>
        <item name="android:textColorPrimaryInverse">@color/color_on_primary_invert</item>

        <item name="colorButtonText">?colorPrimary</item>
        <item name="colorBottomSheetBackground">?backgroundColor</item>
        <item name="colorAnimatedPlaceHolder">?colorPrimary</item>
        <item name="colorToggleButtonOnToolbar">?colorPrimaryVariant</item>
        <item name="colorHighlightPrimary">?colorPrimary</item>
        <item name="colorErrorDatePicker">@color/color_error_date_picker</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- True black dark theme -->
    <style name="Theme.LesPas.TrueBlack" parent="Theme.LesPas.Base">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_true_black</item>
        <item name="colorSecondary">@android:color/darker_gray</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_true_black</item>
        <item name="colorSecondaryVariantFade">@color/color_secondary_variant_fade_true_black</item>
        <item name="colorAccent">?primaryTextWhite</item>

        <item name="colorError">@color/color_error</item>
        <item name="colorSurface">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">?attr/primaryTextWhite</item>
        <item name="colorOnSurface">?attr/primaryTextWhite</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="backgroundColor">@android:color/black</item>
        <item name="android:colorEdgeEffect">?attr/primaryTextWhite</item>

        <item name="android:textColorPrimary">?primaryTextWhite</item>
        <item name="android:textColorPrimaryInverse">?primaryTextBlack</item>
        <item name="android:textColorSecondary">#707070</item>
        <item name="android:textColorSecondaryInverse">#707070</item>

        <item name="colorButtonText">?primaryTextWhite</item>
        <item name="colorBottomSheetBackground">#202020</item>
        <item name="colorAnimatedPlaceHolder">?primaryTextWhite</item>
        <item name="colorToggleButtonOnToolbar">#4B4D4C</item>
        <item name="colorHighlightPrimary">?primaryTextWhite</item>
        <item name="colorErrorDatePicker">@color/color_error_date_picker_true_black</item>

        <item name="colorControlNormal">@color/color_gray_out</item>
        <item name="colorControlActivated">?primaryTextWhite</item>
        <item name="colorControlHighlight">?primaryTextWhite</item>
        <item name="android:colorControlNormal">@color/color_gray_out</item>
        <item name="android:colorControlActivated">?primaryTextWhite</item>
        <item name="android:colorControlHighlight">?primaryTextWhite</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Theme for first login page -->
    <style name="Theme.LesPas.NoTitleBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <!-- Additional UI colors -->
        <item name="colorError">@color/color_error</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="android:colorEdgeEffect">@color/color_on_primary_invert</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- fonts -->
        <item name="fontFamily">@font/archer_bold</item>

        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Normal Theme for ShareReceiverActivity -->
    <style name="Theme.LesPas.Transparent" parent="Theme.LesPas">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!-- True Black Theme for ShareReceiverActivity -->
    <style name="Theme.LesPas.Transparent.TrueBlack" parent="Theme.LesPas.TrueBlack">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!-- Normal Theme for CameraRollActivity -->
    <style name="Theme.LesPas.Cameraroll" parent="Theme.LesPas">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- True Black Theme for CameraRollActivity -->
    <style name="Theme.LesPas.Cameraroll.TrueBlack" parent="Theme.LesPas.TrueBlack">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- Theme for Muzei setting -->
    <style name="Theme.AppCompat.NoActionBar.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/dark_gray_overlay_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Theme.LesPas.ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/primaryTextWhite</item>
    </style>

    <style name="Theme.LesPas.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?colorPrimary</item>
        <item name="android:textColor">?attr/primaryTextWhite</item>
    </style>

    <style name="ThemeOverlay.LesPas.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Widget.LesPas.Button.Borderless</item>
    </style>
    <style name="Widget.LesPas.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorButtonText</item>
    </style>
</resources>