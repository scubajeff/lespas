<resources>
    <!-- Base application theme. -->
    <style name="Theme.LesPas.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/archer_bold</item>

        <item name="alertDialogTheme">@style/ThemeOverlay.LesPas.AlertDialog</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="primaryTextWhite">@color/color_text_light</item>
        <item name="primaryTextBlack">@color/color_text_dark</item>

        <!-- SnackBar theming -->
        <item name="snackbarStyle">@style/Theme.LesPas.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Theme.LesPas.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/Theme.LesPas.SnackbarTextLabel</item>

        <!-- Edge to edge -->
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="actionModeStyle">@style/Theme.LesPas.ActionMode</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Primary theme -->
    <style name="Theme.LesPas" parent="Theme.LesPas.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorSecondaryVariantFade">@color/color_secondary_variant_faded</item>

        <!-- Additional UI colors -->
        <item name="colorError">@color/color_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorControlBackground">@color/color_control_background</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="backgroundColor">@color/color_background</item>
        <item name="android:colorEdgeEffect">@color/color_on_primary</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_inverse</item>

        <item name="colorButtonText">@color/borderless_button_text</item>
        <item name="colorBottomSheetBackground">?backgroundColor</item>
        <item name="colorAnimatedPlaceHolder">?colorPrimary</item>
        <item name="colorToggleButtonOnToolbar">?colorPrimaryVariant</item>
        <item name="colorHighlightPrimary">?colorPrimary</item>
        <item name="colorErrorDatePicker">@color/color_error_date_picker</item>
    </style>

    <!-- True black dark theme -->
    <style name="Theme.LesPas.TrueBlack" parent="Theme.LesPas.Base">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_true_black</item>
        <item name="colorSecondary">@android:color/darker_gray</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_true_black</item>
        <item name="colorSecondaryVariantFade">@color/color_secondary_variant_fade_true_black</item>
        <item name="colorAccent">?primaryTextWhite</item>

        <item name="colorError">@color/color_error</item>
        <item name="colorSurface">?attr/colorPrimaryVariant</item>
        <item name="colorControlBackground">#444542</item>
        <item name="colorOnPrimary">?attr/primaryTextWhite</item>
        <item name="colorOnSurface">?attr/primaryTextWhite</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="backgroundColor">@android:color/black</item>
        <item name="android:colorEdgeEffect">?attr/primaryTextWhite</item>

        <item name="android:textColorSecondary">@color/color_gray_out</item>
        <item name="android:textColorSecondaryInverse">@color/color_gray_out</item>

        <item name="colorButtonText">@color/borderless_button_text_bw</item>
        <item name="colorBottomSheetBackground">#202020</item>
        <item name="colorAnimatedPlaceHolder">?primaryTextWhite</item>
        <item name="colorToggleButtonOnToolbar">#6B6D6C</item>
        <item name="colorHighlightPrimary">?primaryTextWhite</item>
        <item name="colorErrorDatePicker">@color/color_error_date_picker_true_black</item>

        <item name="colorControlNormal">@color/color_gray_out</item>
        <item name="colorControlActivated">?primaryTextWhite</item>
        <item name="colorControlHighlight">?primaryTextWhite</item>
        <item name="android:colorControlNormal">@color/color_gray_out</item>
        <item name="android:colorControlActivated">?primaryTextWhite</item>
        <item name="android:colorControlHighlight">?primaryTextWhite</item>
    </style>

    <!-- Normal Theme for ShareReceiverActivity -->
    <style name="Theme.LesPas.Transparent" parent="Theme.LesPas">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!-- True Black Theme for ShareReceiverActivity -->
    <style name="Theme.LesPas.Transparent.TrueBlack" parent="Theme.LesPas.TrueBlack">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <!-- Theme for Muzei setting -->
    <style name="Theme.AppCompat.NoActionBar.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/dark_gray_overlay_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Toolbar -->
    <style name="Theme.LesPas.ActionBar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">?colorPrimary</item>
        <item name="titleTextColor">?primaryTextWhite</item>
        <item name="subtitleTextColor">?primaryTextWhite</item>
        <item name="theme">@style/ThemeOverlay.LesPas.Toolbar</item>
    </style>

    <style name="ThemeOverlay.LesPas.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">?primaryTextWhite</item>
        <item name="android:colorControlNormal">?primaryTextWhite</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionOverflowButtonStyle">@style/Theme.LesPas.ActionButton</item>
    </style>

    <style name="Theme.LesPas.ActionButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?primaryTextWhite</item>
    </style>

    <!-- ActionMode -->
    <style name="Theme.LesPas.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:layout_marginLeft">-24dp</item>
        <item name="background">?colorPrimary</item>
        <item name="titleTextStyle">@style/ThemeOverlay.LesPas.ActionMode.Title</item>
    </style>

    <style name="ThemeOverlay.LesPas.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?primaryTextWhite</item>
    </style>

    <!-- AlertDialog -->
    <style name="ThemeOverlay.LesPas.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Widget.LesPas.Button.Borderless</item>
    </style>
    <style name="Widget.LesPas.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorButtonText</item>
    </style>

    <!-- SnackBar theming -->
    <style name="Theme.LesPas.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.LesPas.Snackbar</item>
    </style>
    <style name="Theme.LesPas.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/color_error</item>
    </style>
    <style name="Theme.LesPas.SnackbarTextLabel" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?primaryTextWhite</item>
    </style>
    <style name="ThemeOverlay.LesPas.Snackbar" parent="">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="actionTextColorAlpha">1</item>
    </style>
</resources>