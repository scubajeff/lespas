<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/camera_roll_grid_size"
    android:layout_height="@dimen/camera_roll_grid_size"
    android:layout_marginRight="1dp"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/login_background_gradient_2"/>

    <ImageView
        android:id="@+id/play_mark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/tiny_padding"
        android:layout_marginRight="@dimen/tiny_padding"
        android:scaleType="fitCenter"
        android:elevation="2dp"
        android:background="#80000000"
        android:src="@drawable/ic_baseline_play_arrow_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>