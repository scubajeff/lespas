<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/local_media"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/tiny_padding"
        android:elevation="2dp"
        android:background="@color/gallery_location_indicator_local" />

    <View
        android:id="@+id/archive_media"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintBottom_toTopOf="@id/local_media"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/tiny_padding"
        android:elevation="2dp"
        android:background="@color/gallery_location_indicator_remote" />

</merge>