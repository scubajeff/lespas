<!--
Don't use ConstrainLayout asa the first element, will break slideshow, see comment in StoryFragment
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:scaleType="fitCenter"
        android:elevation="1dp"
        tools:src="@drawable/ic_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/motion_photo_play_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="48dp"
        android:layout_marginRight="@dimen/big_padding"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_motion_play_animated_24"
        android:elevation="1dp"
        android:contentDescription="@string/button_text_motion_play"
        tools:ignore="RtlHardcoded" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/motion_photo_playerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:surface_type="surface_view"
        app:resize_mode="fit"
        app:use_controller="false"
        android:animateLayoutChanges="false"
        app:animation_enabled="false" />

</FrameLayout>