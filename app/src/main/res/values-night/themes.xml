<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LesPas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_primary</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- fonts -->
        <item name="fontFamily">@font/archer_bold</item>

        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Setting screen -->
        <item name="preferenceTheme">@style/Theme.LesPas.PreferenceThemeOverlay</item>

        <!-- ActionMode -->
        <item name="actionModeStyle">@style/Theme.LesPas.ActionModeStyle</item>
    </style>

</resources>